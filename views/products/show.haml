.panel.panel-default
  .panel-heading
    %h3.panel-title Panel title
  .panel-body
    %p 
    = 'Name: ' + @product.name
    %p
    = 'Description: ' + @product.description
    %p
    = 'Price: ' + @product.price.to_s
    %p
    = 'Status: '
    - if @product.status == 1
      Enabled
    - else
      Disabled
